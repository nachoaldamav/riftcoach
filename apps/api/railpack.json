{
    "$schema": "https://schema.railpack.com",
    "steps": {
        "install": {
            "commands": [
                "pnpm i --frozen-lockfile"
            ]
        },
        "build": {
            "inputs": [
                {
                    "step": "install"
                }
            ],
            "commands": [
                "pnpm build"
            ]
        },
        "start": {
            "inputs": [
                {
                    "step": "build"
                }
            ],
            "commands": [
                "pnpm start"
            ]
        }
    },
    "deploy": {
        "startCommand": "node dist/index.js"
    }
}