{
  "include": ["./src/**/*"],
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@riftcoach/shared.constants": [
        "../shared/constants/dist/index.d.ts",
        "../shared/constants/dist/index.js"
      ],
      "@riftcoach/packages.shared.aggregations": [
        "../shared/aggregations/dist/index.d.ts",
        "../shared/aggregations/dist/index.js"
      ]
    },

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true,

    /* AND if you're building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true,

    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"]
  }
}
